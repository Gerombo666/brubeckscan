generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address   String   @id @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  mainColor String   @default("#4287f5")
  Node      Node[]
}

model Node {
  id          String   @id @default(uuid())
  address     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  userAddress String?
  name        String   @default("Default node name")
  User        User?    @relation(fields: [userAddress], references: [address], onDelete: Cascade)
}

model BrubeckStats {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  dailyAPR        Float
  dailyAPY        Float
  spotAPR         Float
  spotAPY         Float
  dailyDataStaked Float
  spotDataStaked  Float
}

model CronRun {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  runTimeInSeconds Float
  finalStatus      Int
  errorMessage     String?
}
